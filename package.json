{
  "name": "js-data-mongodb",
  "description": "MongoDB adapter for js-data.",
  "version": "0.8.0",
  "homepage": "https://github.com/js-data/js-data-mongodb",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-data/js-data-mongodb.git"
  },
  "author": "Jason Dobry <jason.dobry@gmail.com> (http://www.pseudobry.com)",
  "license": "MIT",
  "main": "./dist/js-data-mongodb.js",
  "keywords": [
    "data",
    "datastore",
    "store",
    "database",
    "adapter",
    "mongodb"
  ],
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "beforeEach",
      "describe",
      "assert",
      "it"
    ],
    "ignore": [
      "dist/"
    ]
  },
  "scripts": {
    "doc": "jsdoc -c conf.json src && node scripts/cleanup.js",
    "bundle": "rollup -c rollup.config.js -f cjs -o dist/js-data-mongodb.js -m dist/js-data-mongodb.js.map src/index.js",
    "lint": "standard '**/*.js'",
    "build": "npm run lint && npm run bundle",
    "mocha": "mocha -t 20000 -R dot -r source-map-support mocha.start.js",
    "cover": "istanbul cover --hook-run-in-context node_modules/mocha/bin/_mocha -- -t 20000 -R dot -r source-map-support mocha.start.js",
    "test": "npm run build && npm run cover",
    "ci": "npm run test && cat coverage/lcov.info | coveralls || true && cat ./coverage/lcov.info | codacy-coverage || true"
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "chai": "3.5.0",
    "codacy-coverage": "2.0.2",
    "coveralls": "2.13.1",
    "ink-docstrap": "1.3.0",
    "istanbul": "0.4.5",
    "js-data-adapter-tests": "^1.5.0",
    "jsdoc": "3.4.3",
    "mocha": "3.4.2",
    "rollup": "0.41.6",
    "rollup-plugin-babel": "2.7.1",
    "source-map-support": "0.4.15",
    "standard": "10.0.2"
  },
  "dependencies": {
    "bson": "^0.4.x || ^0.3.x",
    "js-data": ">=2.0.0 <3",
    "mongodb": ">=1.3.x",
    "mout": "0.11.1"
  }
}
